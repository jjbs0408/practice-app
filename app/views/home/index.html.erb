<h1>게시판</h1>
<style>
  h1 {
    text-align: center
  }

</style>
<div class="container">
  <a class="btn btn-default" href="/post/new" role="button">게시글 작성</a>
</div>

  <div class="container" style="margin-top:20px">
    <table class="table table-hover">
      <thead>
      <tr class="active">
        <th>작성자</th>
        <th>제목</th>
        <th>수정</th>
        <th>삭제</th>
      </tr>
      </thead>
      <tbody>
      <%@posts.each do |p|%>
          <tr class="warning">
            <td>
              <%=p.user.email%>
            </td>
            <td style="padding-right:50px">
              <a href="/post/read/<%=p.id%> "style="color:black"><%=p.title%></a>
            </td>
            <td>
              <a href="/post/edit/<%=p.id%>" style="color:#2C9AEE">수정</a>
            </td>
            <td>
              <a href="/post/destroy/<%=p.id%>"  style="color:#ee2c2c">삭제</a>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>